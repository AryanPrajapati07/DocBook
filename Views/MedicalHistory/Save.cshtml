@model DocBook.Models.MedicalHistory

@using (Html.BeginForm("Save", "MedicalHistory", FormMethod.Post))
{
    @Html.HiddenFor(m => m.PatientId)

    <div class="form-group">
        <label>Diagnosis</label>
        @Html.TextBoxFor(m => m.Diagnosis, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Medications</label>
        @Html.TextBoxFor(m => m.Medications, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Allergies</label>
        @Html.TextBoxFor(m => m.Allergies, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
}
