@model IEnumerable<DocBook.Models.MedicalHistory>

<h2>Medical History</h2>

<table class="table">
    <thead>
        <tr>
            <th>Diagnosis</th>
            <th>Medications</th>
            <th>Allergies</th>
            <th>Reports</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Diagnosis</td>
                <td>@item.Medications</td>
                <td>@item.Allergies</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.HistoryId" class="btn btn-info">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
