@model DocBook.Models.MedicalHistory

<h2>Medical History</h2>
<form asp-action="Save" method="post">
    <!-- Hidden field to send PatientId to controller -->
    <input type="hidden" name="PatientId" value="@Model.PatientId" />

    

    <div class="form-group">
        <label>Diagnosis</label>
        <input type="text" name="Diagnosis" value="@Model.Diagnosis" class="form-control" />
    </div>

    <div class="form-group">
        <label>Medications</label>
        <input type="text" name="Medications" value="@Model.Medications" class="form-control" />
    </div>

    <div class="form-group">
        <label>Allergies</label>
        <input type="text" name="Allergies" value="@Model.Allergies" class="form-control" />
    </div>

    @if (Model.LastUpdated != DateTime.MinValue)
    {
        <p><strong>Last Updated:</strong> @Model.LastUpdated.ToString("dd-MMM-yyyy hh:mm tt")</p>
    }

    <button type="submit" class="btn btn-primary">Save</button>
</form>
