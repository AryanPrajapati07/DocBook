@model DocBook.Models.MedicalHistory

<div class="medical-history-container">
    <div class="card">
        <div class="card-header">
            <h2 class="mb-0">
                <i class="fas fa-notes-medical me-2"></i>Medical History
            </h2>
        </div>
        <div class="card-body">
            <form asp-action="Save" method="post" id="medicalHistoryForm">
                <!-- Hidden field to send PatientId to controller -->
                <input type="hidden" name="PatientId" value="@Model.PatientId" />

                <div class="row">
                    <div class="col-12">
                        <div class="form-group mb-3">
                            <label for="diagnosis" class="form-label required">
                                <i class="fas fa-stethoscope me-1"></i>Primary Diagnosis
                            </label>
                            <textarea id="diagnosis"
                                      name="Diagnosis"
                                      class="form-control"
                                      rows="3"
                                      placeholder="Enter primary diagnosis and relevant medical conditions..."
                                      maxlength="500">@Model.Diagnosis</textarea>
                            <div class="form-text">Describe the main medical condition or diagnosis</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group mb-3">
                            <label for="medications" class="form-label">
                                <i class="fas fa-pills me-1"></i>Current Medications
                            </label>
                            <textarea id="medications"
                                      name="Medications"
                                      class="form-control"
                                      rows="4"
                                      placeholder="List current medications with dosages (e.g., Aspirin 81mg daily, Lisinopril 10mg twice daily)..."
                                      maxlength="1000">@Model.Medications</textarea>
                            <div class="form-text">Include prescription medications, over-the-counter drugs, and supplements</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="form-group mb-4">
                            <label for="allergies" class="form-label important">
                                <i class="fas fa-exclamation-triangle me-1"></i>Allergies & Adverse Reactions
                            </label>
                            <textarea id="allergies"
                                      name="Allergies"
                                      class="form-control allergies-field"
                                      rows="3"
                                      placeholder="List known allergies and reactions (e.g., Penicillin - rash, Shellfish - anaphylaxis). Enter 'NKDA' if no known drug allergies..."
                                      maxlength="500">@Model.Allergies</textarea>
                            <div class="form-text text-danger">
                                <i class="fas fa-info-circle me-1"></i>Critical for patient safety - please be thorough
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.LastUpdated != DateTime.MinValue)
                {
                    <div class="alert alert-info d-flex align-items-center mb-3">
                        <i class="fas fa-clock me-2"></i>
                        <div>
                            <strong>Last Updated:</strong> @Model.LastUpdated.ToString("MMM dd, yyyy 'at' h:mm tt")
                        </div>
                    </div>
                }

                <div class="form-actions d-flex justify-content-between align-items-center">
                    <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                        <i class="fas fa-arrow-left me-1"></i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save me-2"></i>Save Medical History
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .medical-history-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    .card {
        border: none;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 10px 10px 0 0 !important;
        padding: 1.5rem;
    }

        .card-header h2 {
            color: white;
            font-weight: 600;
        }

    .form-label {
        font-weight: 600;
        color: #495057;
        margin-bottom: 0.5rem;
    }

        .form-label.required::after {
            content: " *";
            color: #dc3545;
        }

        .form-label.important {
            color: #dc3545;
            font-weight: 700;
        }

    .form-control {
        border: 2px solid #e9ecef;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 14px;
        padding: 12px;
    }

        .form-control:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
        }

    .allergies-field {
        border-color: #ffc107 !important;
        background-color: #fff9e6;
    }

        .allergies-field:focus {
            border-color: #ff6b35 !important;
            box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
        }

    .form-text {
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

        .form-text.text-danger {
            font-weight: 600;
        }

    .alert {
        border-radius: 8px;
        border: none;
    }

    .btn {
        border-radius: 8px;
        font-weight: 600;
        padding: 10px 20px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

    .btn-outline-secondary:hover {
        transform: translateY(-1px);
    }

    .form-actions {
        margin-top: 2rem;
        padding-top: 1rem;
        border-top: 1px solid #e9ecef;
    }

    (max-width: 768px) {
        .medical-history-container

    {
        padding: 10px;
    }

    .form-actions {
        flex-direction: column-reverse;
        gap: 10px;
    }

    .btn {
        width: 100%;
    }

    }</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Form validation
        const form = document.getElementById('medicalHistoryForm');
        const diagnosisField = document.getElementById('diagnosis');

        // Auto-resize textareas
        document.querySelectorAll('textarea').forEach(textarea => {
            textarea.addEventListener('input', function() {
                this.style.height = 'auto';
                this.style.height = this.scrollHeight + 'px';
            });
        });

        // Highlight allergies field when empty
        const allergiesField = document.getElementById('allergies');
        function checkAllergiesField() {
            if (allergiesField.value.trim() === '') {
                allergiesField.style.borderColor = '#ffc107';
                allergiesField.placeholder = 'Please specify allergies or enter "NA" (No Known Drug Allergies)';
            }
        }

        allergiesField.addEventListener('blur', checkAllergiesField);

        // Form submission validation
        form.addEventListener('submit', function(e) {
            let isValid = true;

            // Check if diagnosis is filled
            if (diagnosisField.value.trim() === '') {
                diagnosisField.style.borderColor = '#dc3545';
                diagnosisField.focus();
                isValid = false;
            }

            // Warn if allergies field is empty
            if (allergiesField.value.trim() === '') {
                const confirmSubmit = confirm('Allergies field is empty. Are you sure you want to continue? Consider entering "NKDA" if there are no known allergies.');
                if (!confirmSubmit) {
                    allergiesField.focus();
                    isValid = false;
                }
            }

            if (!isValid) {
                e.preventDefault();
            }
        });

        // Clear error styling on input
        document.querySelectorAll('.form-control').forEach(field => {
            field.addEventListener('input', function() {
                if (this.style.borderColor === 'rgb(220, 53, 69)') { // red border
                    this.style.borderColor = '';
                }
            });
        });
    });
</script>