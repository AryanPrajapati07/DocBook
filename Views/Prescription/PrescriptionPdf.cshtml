@model DocBook.Models.PrescriptionPdfViewModel
@{
    Layout = null;
    <!-- No master layout for PDF -->
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Prescription</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            font-size: 14px;
        }
        .header {
            text-align: center;
            border-bottom: 2px solid #000;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .header h2 {
            margin: 0;
            color: #2c3e50;
        }
        .patient-info, .doctor-info {
            margin-bottom: 15px;
        }
        .patient-info strong, .doctor-info strong {
            display: inline-block;
            width: 150px;
        }
        .section {
            margin-top: 20px;
        }
        .section h3 {
            border-bottom: 1px solid #ccc;
            padding-bottom: 5px;
            color: #34495e;
        }
        .medicine-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }
        .medicine-table th, .medicine-table td {
            border: 1px solid #aaa;
            padding: 8px;
            text-align: left;
        }
        .footer {
            margin-top: 40px;
            text-align: right;
            font-size: 12px;
            color: #555;
        }
    </style>
</head>
<body>

    <div class="header">
        <h2>Clinic Prescription</h2>
        <p>Prescription ID: @Model.PrescriptionId</p>
    </div>

    <div class="patient-info">
        <strong>Patient Name:</strong> @Model.PatientName <br />
        <strong>Appointment Date:</strong> @Model.AppointmentDate.ToString("dd-MMM-yyyy")
    </div>

    <div class="doctor-info">
        <strong>Doctor Name:</strong> Dr. @Model.DoctorName
    </div>

    <div class="section">
        <h3>Prescribed Medicines</h3>
        <table class="medicine-table">
            <thead>
                <tr>
                    <th>Medicine</th>
                    <th>Instructions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.MedicineName</td>
                    <td>@Model.Instructions</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="footer">
        <p>Generated on: @DateTime.Now.ToString("dd-MMM-yyyy hh:mm tt")</p>
        <p>Signature: ____________________</p>
    </div>

</body>
</html>
